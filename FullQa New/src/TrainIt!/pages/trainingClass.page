<apex:page StandardController="CLX__Training_Class__c" tabStyle="CLX__Training_Course__c" sidebar="true" standardStylesheets="true" showHeader="true" id="page">
<apex:stylesheet value="{!URLFOR($Resource.CLX__VFResources, 'GeneralCss.css')}" />
<style>
.dim_a {width:300px; font-family: Verdana; font-size: 10px; font-weight: normal;}
.tabletext {font-family: Verdana; font-size: 90%; font-weight: normal;}
.activeTab {background-color: LightSlateGray; color:white; background-image:none}
.inactiveTab { background-color: lightgrey; color:black; background-image:none}
</style>


<chatter:feedWithFollowers entityId="{!CLX__Training_Class__c.id}"/>

<apex:form >
<apex:detail relatedlist="false" inlineEdit="TRUE"/>
</apex:form>

<apex:tabPanel switchtype="client" selectedTab="tabA" inactiveTabClass="inactiveTab" activeTabClass="activeTab" width="100%">
    <apex:tab label="Attendees" name="tabA">
        <apex:relatedList list="Training_Attendees__r" subject="{!CLX__Training_Class__c.id}"/>
    </apex:tab>
    <apex:tab label="Open Activities" name="tabB">
        <apex:relatedList list="OpenActivities" subject="{!CLX__Training_Class__c.id}"/>
    </apex:tab>
    <apex:tab label="Activity History" name="tabC">
        <apex:relatedList list="ActivityHistories" subject="{!CLX__Training_Class__c.id}"/>
    </apex:tab>
    <apex:tab label="Notes and Attachments" name="tabD">
        <apex:relatedList list="NotesAndAttachments" subject="{!CLX__Training_Class__c.id}"/>
    </apex:tab>
</apex:tabPanel>

</apex:page>