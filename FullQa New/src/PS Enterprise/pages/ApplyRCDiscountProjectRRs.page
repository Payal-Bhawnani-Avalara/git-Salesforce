<apex:page standardController="pse__Proj__c" extensions="pse.ApplyRCDiscountFromProjController" action="{!init}" lightningStylesheets="true">
	<apex:sectionHeader title="{!$Label.pse__common_label_project}" subtitle="{!pse__Proj__c.Name}"/>
	<apex:form >
		<apex:outputPanel layout="none" rendered="{!$User.UIThemeDisplayed=='Theme4d'}">
			<style>
				.pageTitleIcon { 
					border-radius: .25rem; 
					background-color: #c8ca58;
					background-image: url({!URLFOR($Asset.SLDS, 'assets/icons/custom/custom44.svg')}); 
					background-repeat: no-repeat; 
					background-position: center; 
					background-size: 2rem; 
					display: block !important; 
				}
			</style>
		</apex:outputPanel>
		<apex:pageMessages />
		<apex:pageBlock >
			<apex:pageBlockSection collapsible="false" columns="1"
				title="{!$Label.pse__rate_card_discount_ui_label_apply_rc_discount}" id="messageSection">
				<apex:outputText value="{!$Label.pse__rate_card_discount_project_ui_confirm_apply}" rendered="{!NOT(isResponseMsg)}"/>
			</apex:pageBlockSection>
			<apex:pageBlockButtons location="bottom">
                <apex:outputPanel rendered="{!NOT(isResponseMsg)}">
                    <apex:commandButton value="{!$Label.pse__common_label_ok}" action="{!applyRCDiscount}" styleClass="btn"  />
                    <apex:commandButton value="{!$Label.pse__common_label_cancel}" action="{!cancel}" styleClass="btn" />
                </apex:outputPanel>
                <apex:outputPanel rendered="{!isResponseMsg}">
                	<apex:commandButton value="{!$Label.pse__rate_card_discount_ui_label_back_to_project}" action="{!backToProject}" styleClass="btn" />
				</apex:outputPanel>
            </apex:pageBlockButtons>

		</apex:pageBlock>
	</apex:form>
</apex:page>