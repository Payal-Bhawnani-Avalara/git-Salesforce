<aura:component extends="c:LCC_GenericLightningComponent" implements="force:hasRecordId,force:lightningQuickActionWithoutHeader" controller="QQButton_Controller">
   
    <!-- User Interface -->
    <aura:attribute name="recordId" type="String" />
    
    <div class="slds-modal__header">
            <h2 class="slds-text-heading_medium slds-hyphenate">QQ NFR</h2>
    </div>
        
    <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
            <p>You are about to QQ NFR.</p>
            <br/>
            <p>Are you sure you want to continue?</p>
        </div>
        <div class="slds-modal__footer">
            <lightning:button class="slds-button_neutral" onclick="{!c.qqNFR}" label="Confirm" />
            <lightning:button class="slds-button_brand" onclick="{!c.cancel}" label="Cancel"/> 
        </div>
         <aura:if isTrue="{!not(empty(v.recordError))}">
        <div class="recordError">
            <ui:message title="Error" severity="error" closable="true">
                {!v.recordError}
            </ui:message>
        </div>
    </aura:if>
    
    <!-- The height of the modal is defined in salesforce, when you create the new action. -->
    <!-- Recommended height size: 250px -->
	
</aura:component>