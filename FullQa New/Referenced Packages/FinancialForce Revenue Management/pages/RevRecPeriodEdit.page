<apex:page standardController="ffrr__RecognitionPeriod__c" extensions="ffrr.RevRecPeriodsController">
	<c:VFShim />
	<apex:sectionHeader title="RevenueRecognition - Edit" subtitle="Edit Period" />
<script>
function setFocusOnLoad() {}
</script>
	<apex:form >
		<apex:pageBlock title="Quick Edit: Period {!ffrr__RecognitionPeriod__c.ffrr__PeriodNumber__c}">
			<apex:pageMessages />
			<apex:outputPanel >
				<apex:pageBlockSection title="{!$Label.ffrr__revreceditpagetitle}" columns="1">
					<apex:inputfield value="{!ffrr__RecognitionPeriod__c.ffrr__StartDate__c}" />
					<apex:inputfield value="{!ffrr__RecognitionPeriod__c.ffrr__EndDate__c}" />
					<apex:inputfield value="{!ffrr__RecognitionPeriod__c.ffrr__Period_Group__c}" />
				</apex:pageBlockSection>
			</apex:outputPanel>
			<apex:pageBlockButtons location="bottom">
				<apex:commandButton value="{!$Label.ffrr__revenuerecognitiondialogsave}" action="{!customSave}" />
				<apex:commandButton value="{!$Label.ffrr__revenuerecognitiondialogcancel}" action="{!cancel}" />
			</apex:pageBlockButtons>
		</apex:pageBlock>
	</apex:form>
</apex:page>