<!-- fflib_batchprocessrun -->
<apex:page standardController="ffrr__fflib_BatchProcess__c" extensions="ffrr.fflib_BatchProcessController">
	<apex:form >
		<apex:sectionHeader title="{!$Label.ffrr__fflib_batchprocessrunpagetitle}"/>
		<apex:pageBlock title="{!$Label.ffrr__fflib_batchprocessrunpagesectiontitle}">
			<apex:pageBlockButtons >
				<apex:commandButton value="{!$Label.ffrr__fflib_batchprocessrunjobsbutton}" action="{!runJob}"/>
				<apex:commandButton value="{!$Label.ffrr__fflib_batchprocesscancelbutton}" action="{!cancel}"/>
			</apex:pageBlockButtons>
			
			<apex:pageMessages />
			<apex:pageMessage summary="{!$Label.ffrr__fflib_batchprocessconfirmationmessage}" severity="info" strength="2" />
		</apex:pageBlock>
	</apex:form>
</apex:page>