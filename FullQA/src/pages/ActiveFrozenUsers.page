<apex:page controller="MiscUsers" title="Service Desk Information Page">
	<apex:pageBlock title="License Count">
	    <apex:pageBlockTable value="{!CurrentLicenses}" var="Record">
	        <apex:column >
	            <apex:facet name="header">SFDC Total Licenses</apex:facet>
	            <apex:outputText value="{!Record.TotalLicenses}"/>
	        </apex:column>
	        <apex:column >
	            <apex:facet name="header">SFDC Used Licenses</apex:facet>
	            <apex:outputText value="{!Record.UsedLicenses}"/>
	        </apex:column>
	   </apex:pageBlockTable>	
	    <apex:pageBlockTable value="{!CurrentPROS}" var="Record">
	        <apex:column >
	            <apex:facet name="header">PROS Total Licenses</apex:facet>
	            <apex:outputText value="{!Record.AllowedLicenses}"/>
	        </apex:column>
	        <apex:column >
	            <apex:facet name="header">PROS Used Licenses</apex:facet>
	            <apex:outputText value="{!Record.UsedLicenses}"/>
	        </apex:column>
	   </apex:pageBlockTable>		   
	    <apex:pageBlockTable value="{!CurrentDE}" var="Record">
	        <apex:column >
	            <apex:facet name="header">PROS Total Licenses</apex:facet>
	            <apex:outputText value="{!Record.AllowedLicenses}"/>
	        </apex:column>
	        <apex:column >
	            <apex:facet name="header">PROS Used Licenses</apex:facet>
	            <apex:outputText value="{!Record.UsedLicenses}"/>
	        </apex:column>
	   </apex:pageBlockTable>		   
	</apex:pageBlock>

	<apex:pageBlock title="Active / Frozen Users">
	    <apex:pageBlockTable value="{!ActiveFrozenRecords}" var="Record">
	        <apex:column >
	            <apex:facet name="header">Full Name</apex:facet>
	            <apex:outputText value="{!Record.Full_Name__c}"/>
	        </apex:column>
	        <apex:column >
	            <apex:facet name="header">Profile Name</apex:facet>
	            <apex:outputText value="{!Record.Profile.Name}"/>        
	        </apex:column>
            <apex:column >
	            <apex:facet name="header">Days Since Frozen</apex:facet>
	           <apex:outputText >
	                <apex:param value="{!Record.Days_Since_Freeze__c}" />
	            </apex:outputText>
	
	        </apex:column>
	        <apex:column >
	            <apex:facet name="header">Email/User Detail Record</apex:facet>
	            <apex:outputLink value="/{!Record.id}">{!Record.Email}</apex:outputLink>                
	        </apex:column>
	    </apex:pageBlockTable>
	</apex:pageBlock>

	<apex:pageBlock title="Active/No login activity/45 days">
	    <apex:pageBlockTable value="{!ActiveNoLoginRecords}" var="Record">
	        <apex:column >
	            <apex:facet name="header">Full Name</apex:facet>
	            <apex:outputText value="{!Record.Full_Name__c}"/>
	        </apex:column>
	        <apex:column >
	            <apex:facet name="header">Profile Name</apex:facet>
	            <apex:outputText value="{!Record.Profile.Name}"/>        
	        </apex:column>
	        <apex:column >
				<apex:facet name="header">Last Login Date</apex:facet>
	            <apex:outputText value="{0,date,MM/dd/yy}">
	                <apex:param value="{!Record.LastLoginDate}" />
	            </apex:outputText>
	        </apex:column>
	        <apex:column >
	            <apex:facet name="header">Email/User Detail Record</apex:facet>
	            <apex:outputLink value="/{!Record.id}">{!Record.Email}</apex:outputLink>                
	        </apex:column>
	    </apex:pageBlockTable>
	</apex:pageBlock>
</apex:page>