        <defaultConnectorLabel>No Primary</defaultConnectorLabel>
        <rules>
            <name>Yes_Primary</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>sobjectContact.PrimaryContact__c</leftValueReference>
