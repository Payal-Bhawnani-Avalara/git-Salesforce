<apex:page title="{!$Label.pse__mass_assign_resource_projects_label_page_title}"
	standardController="pse__Assignment__c" recordsetvar="assignments"
	extensions="pse.MassAssignProjectsToResourceController" sidebar="false" lightningStylesheets="true">

	<apex:outputPanel rendered="{!$User.UIThemeDisplayed == 'Theme4d'}" layout="none">
		<style>
			.pageTitleIcon {
				border-radius: .25rem;
			    background-color: #4dca76;
			    background-image: url("{!URLFOR($Asset.SLDS, 'assets/icons/custom/custom18.svg')}");
			    background-repeat: no-repeat;
			    background-position: center;
			    background-size: 2rem;
				display: block !important;
			}
		</style>
	</apex:outputPanel>
	<apex:sectionHeader title="{!$Label.pse__mass_assign_resource_projects_label_page_title}"
		subTitle="{!bean.resource.Name}" help="{!$Page.pse__AssignProjectsToResourceHelp}" />

	<c:massCreateAssignments seedAttribute="{!bean.seedData}" />

</apex:page>