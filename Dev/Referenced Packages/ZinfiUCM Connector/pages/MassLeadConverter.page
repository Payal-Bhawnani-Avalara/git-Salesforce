<apex:page StandardController="Lead" recordSetVar="leads" extensions="ucm.MassLeadConverterController" >
         <apex:sectionHeader title="Mass Convert Leads" subtitle="" />
         <apex:slds />
         <div class="slds-scope">
            <apex:form id="form" >
            <apex:pageBlock >

          <apex:pageMessages />
        <apex:pageBlockButtons location="bottom">   
                <apex:commandButton value="Save" rerender="form" action="{!convertLeads}"  />
                <apex:commandButton value="Cancel" action="{!cancel}"/>
            </apex:pageBlockButtons>
             <apex:pageBlockSection title="Selelcted leads" columns="1">
                       <apex:pageBlockTable value="{!selectedItems}" var="selectedLead">
                           <apex:column >
                                <apex:facet name="header">New Opportunity </apex:facet>
                                <apex:inputField value="{!selectedLead.ucm__New_Opportunity__c  }" />
                            </apex:column>
                            <apex:column value="{!selectedLead.Name}"/>  
                            <apex:column value="{!selectedLead.Company}"/>
                            <apex:column value="{!selectedLead.Phone}"/>
                             <apex:column value="{!selectedLead.ucm__PRM_ID__c}"/>                  
                         
                            <apex:column >
                                <apex:facet name="header">Existing account </apex:facet>
                                <apex:inputField value="{!selectedLead.ucm__Selected_Account__c}" />
                            </apex:column>
                        </apex:pageBlockTable>
             </apex:pageBlockSection>
            </apex:pageBlock>

</apex:form>
</div>
</apex:page>