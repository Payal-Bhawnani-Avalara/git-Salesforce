<apex:component id="CC_Ava_purchase_billinginformation">

  <form id="billingInformation" name="billingInformation" action="" method="">

    <p><input type="checkbox" name="sameas" id="sameas" value="1" class="sameas is-selected" checked="checked" /> <label for="sameas">Contact information as billing</label></p>
    
    <div class="sameas" style="display:none">
      <div class="form-group">
        <div class="col-md-4">
          
          <p><label form="full_name">Full Name</label> <sup class="required-marker">*</sup></p>
        </div>
        <div class="col-md-8">
          <input name="full_name" id="full_name" value="" placeholder="Please enter your first and last name" class="form-control" data-iframe="creditCardHolderName" data-sfname="fullname" required="true"/>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-4">
          <p><label form="company">Company</label> <sup class="required-marker">*</sup></p>
        </div>
        <div class="col-md-8">
          <input name="company" id="company" value="" placeholder="Please enter your company name" class="form-control" data-iframe="company" data-sfname="Company" required="true" />
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-4">
          <p><label form="address1">Address 1</label> <sup class="required-marker">*</sup></p>
        </div>
        <div class="col-md-8">
          <input name="address1" id="address1" value="" placeholder="Please enter an address" class="form-control" data-iframe="creditCardAddress1" data-sfname="Address1" required="true" />
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-4">
          <p><label form="address2">Address 2</label></p>
        </div>
        <div class="col-md-8">
          <input name="address2" id="address2" value="" placeholder="Please enter an address" class="form-control" data-iframe="creditCardAddress2" data-sfname="Address2" />
        </div>
      </div>

      <div class="col-6">
        <div class="form-group">
          <div class="col-md-4">
            <p><label form="city">City</label> <sup class="required-marker">*</sup></p>
          </div>
          <div class="col-md-8">
            <input name="city" id="city" value="" placeholder="Please enter a city" class="form-control" data-iframe="creditCardCity" data-sfname="City" required="true" />
          </div>
        </div>
      </div>

      <div class="col-6">
        <div class="form-group">
          <div class="col-md-4">
            <p><label form="state">State/Province</label> <sup class="required-marker">*</sup></p>
          </div>
          <div class="col-md-8">

