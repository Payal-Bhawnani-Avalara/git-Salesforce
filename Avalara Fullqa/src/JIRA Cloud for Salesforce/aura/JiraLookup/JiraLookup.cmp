<aura:component controller="JCFS.RemoteProxyController" access="global">

    <aura:attribute name="value" type="String" description="Id of the selected issue"/>
    <aura:attribute name="projectId" type="String" description="Project id of the selected issue"/>
    <aura:attribute name="commaSeparatedProjectIds" type="String"/>

    <!-- Required -->
    <aura:attribute name="placeholder" type="String"/>

    <!-- Messages -->
    <aura:attribute name="loadingMessage" type="String" default="Loading..."/>
    <aura:attribute name="searchingMessage" type="String" default="Searching..."/>
    <aura:attribute name="noResultsMessage" type="String" default="No results found for {0}"/>
    <aura:attribute name="errorMessage" type="String"/>
    <aura:attribute name="error" type="Boolean"/>

    <!-- Methods -->
    <aura:method name="showError" action="{!c.showError}">
        <aura:attribute name="errorMessage" type="String"/>
    </aura:method>
    <aura:method name="hideError" action="{!c.hideError}"/>

    <!-- Internal -->
    <aura:attribute name="focusIndex" type="Integer" access="private"/>
    <aura:attribute name="idNumber" type="Integer" access="private"/>
    <aura:attribute name="initCallsRunning" type="Integer" default="{!0}" access="private"/>
    <aura:attribute name="lastSearchTerm" type="String" access="private"/>
    <aura:attribute name="openMenu" type="Boolean" default="{!false}" access="private"/>
    <aura:attribute name="records" type="Object[]" description="Records returned from JQL search" access="private"/>
    <aura:attribute name="searching" type="Boolean" access="private"/>
    <aura:attribute name="searchTimeout" type="Object" access="private"/>
    <aura:attribute name="optionText" type="String" access="private"/>
    <aura:attribute name="isMobile" type="Boolean" default="{!false}" access="private"/>

    <!-- Event registration and handlers -->
    <aura:handler name="init" value="{!this}" action="{!c.onInit}"/>
    <aura:handler name="change" value="{!v.focusIndex}" action="{!c.handleFocusIndexChange}"/>
    <aura:handler name="change" value="{!v.value}" action="{!c.handleValueChange}"/>

    <!-- Jira Issue Lookup -->
    <ui:scrollerWrapper aura:id="lookup"
                        class="{!'slds-form-element slds-lookup slds-is-open ' + if(v.error, 'slds-has-error ', '') + if(v.isMobile, 'sl-lookup--mobile ', '') + if(v.openMenu, ' sl-lookup--open', '')}">
        <div class="{!'slds-form-element__control slds-input-has-icon slds-input-has-icon--right'}"
             onclick="{!c.cancelLookup}">
            <div class="{!'slds-pill_container' + if(or(not(empty(v.value)), greaterthan(v.initCallsRunning, 0)), '', ' slds-hide')}">
                <span class="{!'slds-pill slds-size--1-of-1' + if(greaterthan(v.initCallsRunning, 0), ' sl-pill--loading', '')}">
                    <span class="slds-pill__label sl-pill__label"
                          title="{!if(v.initCallsRunning > 0, v.loadingMessage, v.optionText)}">
                            {!if(v.initCallsRunning > 0, v.loadingMessage, v.optionText)}
                    </span>
                    <button class="{!'slds-button slds-button--icon slds-pill__remove' + if(or(greaterthan(v.initCallsRunning, 0)), ' slds-hide', '')}"
                            title="Remove" onclick="{!c.handlePillClick}">
                        <lightning:icon iconName="utility:close" size="xx-small" variant="inverse"/>
                    </button>
                </span>
            </div>
            <div class="{!'sl-lookup__input_container slds-grid slds-grid--pull-padded-xx-small' + if(and(equals(v.initCallsRunning, 0), empty(v.value)), '', ' slds-hide')}">
                <div class="sl-lookup__input slds-col slds-p-horizontal--xx-small">
                    <lightning:icon iconName="utility:search" size="x-small" class="sl-search-icon" variant="inverse"/>
                    <input aura:id="lookupInput"
                           id="{!'jira-lookup-' + v.idNumber}"
                           name="{!'input-' + v.idNumber}"
                           class="slds-lookup__search-input slds-input js-template-lookup"
                           type="text"
                           aria-autocomplete="list"
                           role="combobox"
                           aria-expanded="false"
                           placeholder="{!v.placeholder}"
                           onclick="{!c.handleInputClick}"
                           onfocus="{!c.handleInputFocus}"
                           onkeydown="{!c.handleInputKeyDown}"
                           onkeyup="{!c.handleInputKeyUp}"/>
                </div>
                <aura:if isTrue="{!v.isMobile}">
                    <div class="sl-lookup--mobile__cancel slds-col slds-no-flex slds-p-horizontal--xx-small">
                        <button class="slds-button slds-button--neutral" onclick="{!c.cancelLookup}">Cancel</button>
                    </div>
                </aura:if>
            </div>
            <div class="{!if(v.searching, 'slds-lookup__menu', 'slds-hide')}" role="listbox"
                 onclick="{!c.handleSearchingClick}">
                <ul class="slds-lookup__list" role="listbox">
                    <li role="presentation">
                        <span class="slds-lookup__item-action slds-media sl-searching" role="option">
                            <div class="slds-media__body">
                                <div class="slds-lookup__result-text">{!v.searchingMessage}</div>
                            </div>
                        </span>
                    </li>
                </ul>
            </div>
            <div class="{!if(and(v.searching == false, v.openMenu), 'slds-lookup__menu', 'slds-hide')}" role="listbox">
                <div class="{!if(or(v.records == null, v.records.length == 0), '', 'slds-hide')}">
                    <ul class="slds-lookup__list" role="listbox">
                        <li role="presentation">
                            <span class="slds-lookup__item-action slds-media sl-no-results" role="option">
                                <div class="slds-media__body">
                                    <div class="slds-lookup__result-text">
                                            {!format(v.noResultsMessage, '"' + v.lastSearchTerm + '"')}
                                    </div>
                                </div>
                            </span>
                        </li>
                    </ul>
                </div>
                <ul aura:id="lookupMenu" class="{!if(v.searching, 'slds-hide', 'slds-lookup__list')}" role="listbox">
                    <aura:iteration items="{!v.records}" var="record" indexVar="index">
                        <li role="presentation" class="{!if(index == v.focusIndex, 'slds-has-focus', '')}"
                            data-index="{!index}" onclick="{!c.handleRecordClick}">
                            <span class="slds-lookup__item-action slds-media" role="option">
                                <aura:if isTrue="{!not(empty(record.iconUrl))}">
                                        <img src="{!record.iconUrl}" class="slds-record-icon slds-icon_x-small"/>
                                </aura:if>
                                <div class="slds-media__body">
                                    <div class="slds-lookup__result-text">{!record.issueKey}</div>
                                    <span class="{!'slds-lookup__result-meta slds-text-body--small' + if(empty(record.summary, ' slds-hide', ''))}">
                                            {!record.summary}
                                    </span>
                                </div>
                            </span>
                        </li>
                    </aura:iteration>
                </ul>
            </div>
        </div>

        <aura:if isTrue="{!and(v.error, not(empty(v.errorMessage)))}">
            <div class="slds-form-element__help">{!v.errorMessage}</div>
        </aura:if>
    </ui:scrollerWrapper>
</aura:component>